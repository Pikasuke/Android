<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvExpresion"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:textColor="@color/nunmberBtn"
        android:gravity="end"
        android:singleLine="true"
        android:textSize="40sp"
        android:ellipsize="start"/>
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textColor="@color/nunmberBtn"
        android:gravity="end"
       android:singleLine="true"
        android:textSize="30sp"
        android:ellipsize="end"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvClear"
                style="@style/actionBtn"
                android:text="CE"/>
            <TextView
                android:id="@+id/tvOpen"
                style="@style/actionBtn"
                android:text="("/>
            <TextView
                android:id="@+id/tvClose"
                style="@style/actionBtn"
                android:text=")"/>
            <TextView
                android:id="@+id/tvDiv"
                style="@style/actionBtn"
                android:text="/"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv1"
                style="@style/numberBtn"
                android:text="1"/>
            <TextView
                android:id="@+id/tv2"
                style="@style/numberBtn"
                android:text="2"/>
            <TextView
                android:id="@+id/tv3"
                style="@style/numberBtn"
                android:text="3"/>
            <TextView
                android:id="@+id/tvMul"
                style="@style/actionBtn"
                android:text="x"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv4"
                style="@style/numberBtn"
                android:text="4"/>
            <TextView
                android:id="@+id/tv5"
                style="@style/numberBtn"
                android:text="5"/>
            <TextView
                android:id="@+id/tv6"
                style="@style/numberBtn"
                android:text="6"/>
            <TextView
                android:id="@+id/tvMoins"
                style="@style/actionBtn"
                android:text="-"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv7"
                style="@style/numberBtn"
                android:text="7"/>
            <TextView
                android:id="@+id/tv8"
                style="@style/numberBtn"
                android:text="8"/>
            <TextView
                android:id="@+id/tv9"
                style="@style/numberBtn"
                android:text="9"/>
            <TextView
                android:id="@+id/tvPlus"
                style="@style/actionBtn"
                android:text="+"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvDot"
               style="@style/numberBtn"
                android:text="."/>
            <TextView
                android:id="@+id/tv0"
                style="@style/numberBtn"
                android:text="0"/>
            <ImageView
                android:id="@+id/tvBack"
                style="@style/numberBtn"
                android:src="@drawable/back"
                android:scaleType="center"/>
            <TextView
                android:id="@+id/tvEqual"
                style="@style/actionBtn"
                android:text="="/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>